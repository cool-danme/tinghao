package tinghao07;

//内部类就是在一个类中定义一个类
//内部类的访问特点：内部类可以直接访问外部类的成员，包括私有；外部类要访问的话，必须创建对象；
public class Outer {
    private int num = 20;

    public class Inner {
        public void show() {
            System.out.println(num);
        }

    }

    public void method(){

        Inner i = new Inner();
        i.show();
    }
}
------------------------
匿名内部类：
package tinghao07;

public class Outer {
public void method(){
    Inter i=new Inter(){
        @Override
        public void show() {
            System.out.println("匿名内部类");
        }
    };
    i.show();
    i.show();
}

}

public class OuterDemo {

    public static void main(String[] args) {
        Outer o=new Outer();

        o.method();
    }
}


public interface Inter {
    void show();
}
